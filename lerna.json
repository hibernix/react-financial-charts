{
  "packages": [
    "packages/*"
  ],
  "version": "2.0.2",
  "npmClient": "npm",
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "publish": {
      "preDistTag": "next",
      "noGitReset": true,
      "registry": "http://localhost:8081/repository/npm"
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ]
}
